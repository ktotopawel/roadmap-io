{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@roadmap-io/types": ["../types/dist"]
    }
  },
  "include": ["src/**/*",
    "prisma/**/*"
  ]
}
