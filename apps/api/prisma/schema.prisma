generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Goal {
  id        String   @id @default(cuid())
  title     String
  parentId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
  parent    Goal?    @relation("GoalToSubGoals", fields: [parentId], references: [id])
  subGoals  Goal[]   @relation("GoalToSubGoals")
  Roadmap   Roadmap  @relation(fields: [roadmapId], references: [id])
  roadmapId String
}

model Task {
  id      String    @id @default(cuid())
  goalId  String
  title   String
  status  String    @default("TODO")
  goal    Goal      @relation(fields: [goalId], references: [id])
  dueDate DateTime?
}

model Roadmap {
  id        String   @id @default(cuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  goals     Goal[]
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  createdAt DateTime  @default(now())
  roadmaps  Roadmap[]
  tokens    Token[]
}

model Token {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  createdAt DateTime  @default(now())
  expiresAt DateTime
  usedAt    DateTime?
  User      User      @relation(fields: [userId], references: [id])
}
